<UserControl x:Class="_335thUserCapture.View.CaptureOneUserOnComputer.ListUsers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Local="clr-namespace:_335thUserCapture.ObjectFactory"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="80*" />
        </Grid.RowDefinitions>
        <StackPanel Margin="5" Orientation="Vertical" Grid.Row="0" Height="50">
            <Label>List of uses currently installed</Label>
            <Label>Please select user to backup</Label>
        </StackPanel>
        <ListBox Margin="5" Grid.Row="1" Background="Transparent" ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser}">
            
        </ListBox>
    </Grid>
</UserControl>
